   <Action>
      <Name>AudioCapture.SetQuality</Name>
      <Description>Sets audio capture quality.</Description>
      <ReturnValueType></ReturnValueType>
      <Arguments>
        <Arg>
          <Name>Quality</Name>
          <Description>Audio capture quality.</Description>
          <Type>number</Type>
          <Default>1</Default>
          <Required>0</Required>
          <EasyMode>
            <Default>AudioCaptureQuality.Low</Default>
