   <Action>
      <Name>AudioCapture.SetSettings</Name>
      <Description>Sets audio capture settings. [channels = 1 (mono), 2 (stereo); samplesPerSec = 8000 (hz), 11025 (hz), 22050 (hz), 44100 (hz); bitsPerSample = 8, 16;]</Description>
      <ReturnValueType></ReturnValueType>
      <Arguments>
        <Arg>
          <Name>Channels</Name>
          <Description>Audio capture channels.</Description>
          <Type>number</Type>
          <Default>1</Default>
          <Required>0</Required>
          <EasyMode>
            <Default>1</Default>
            <DataType>combo</DataType>
            <Constraints>1,2</Constraints>
          </EasyMode>
        </Arg>
        <Arg>
          <Name>SamplesPerSec</Name>
          <Description>Audio capture samples per second.</Description>
          <Type>number</Type>
          <Default>2</Default>
          <Required>0</Required>
          <EasyMode>
            <Default>2</Default>
            <DataType>combo</DataType>
            <Constraints>8000,11025,22050,44100</Constraints>
          </EasyMode>
        </Arg>
        <Arg>
          <Name>BitsPerSample</Name>
          <Description>Audio capture bits per sample.</Description>
          <Type>number</Type>
          <Default>1</Default>
          <Required>0</Required>
          <EasyMode>
            <Default>1</Default>
            <DataType>combo</DataType>
            <Constraints>8,16</Constraints>
          </EasyMode>
        </Arg>
      </Arguments>
   </Action>
